    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Stitching.graphql" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Stitching.graphql">
